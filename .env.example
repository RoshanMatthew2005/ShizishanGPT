# Environment Variables for ShizishanGPT
# Copy this file to .env and fill in your values

# API Keys (if using external services)
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_key_here

# Database (if needed in future)
DATABASE_URL=sqlite:///./shizishangpt.db

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# Model Paths (override config.yaml if needed)
# YIELD_MODEL_PATH=models/yield_predictor/model.pkl
# PEST_MODEL_PATH=models/pest_detector/model.pth

# External Services
WEATHER_API_KEY=your_weather_api_key
WEATHER_API_URL=https://api.weather.com

# Security
SECRET_KEY=your_secret_key_here_change_in_production
